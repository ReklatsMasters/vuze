{
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "quotes": 0,
    "semi": [2, "never"],
    "func-style": ["error", "declaration", {"allowArrowFunctions": true}],
    "no-use-before-define": [2, { "functions": false, "classes": false }],
    "no-unused-vars" : 2,
    "no-undef" : 2,
    "prefer-const": 2
  }
}
